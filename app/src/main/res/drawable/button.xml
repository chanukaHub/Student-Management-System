<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#4E5078" />
            <gradient android:angle="-90" android:startColor="#3C3F6C" android:endColor="#4E5078"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="11dip" android:color="#4E5078" />
            <solid android:color="#4E5078"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#4E5078" />
            <gradient android:angle="-90" android:startColor="#6A6B8E" android:endColor="#4E5078" />
        </shape>
    </item>
</selector>