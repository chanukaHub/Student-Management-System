<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teachers.Upload">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_alignParentLeft="true">

            <ProgressBar
                android:id="@+id/student_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="31dp" />
            <TextView
                android:id="@+id/headerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Add New Student"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/studentNameEditText"
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:hint="Full Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/studentIndexEditText"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:hint="Index"
                android:inputType="text"
                android:minLines="3" />

            <EditText
                android:id="@+id/studentAddressEditText"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:hint="Address"
                android:inputType="text"
                android:minLines="3" />
            <EditText
                android:id="@+id/studentContactEditText"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:hint="Contact"
                android:inputType="text"
                android:minLines="3" />
            <EditText
                android:id="@+id/studentEmailEditText"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:hint="Email"
                android:inputType="text"
                android:minLines="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_choose_student_image"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="#251142"
                    android:text="Choose"
                    android:textColor="#fff" />

                <ImageView
                    android:id="@+id/chosenStudentImageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
            </LinearLayout>

            <Button
                android:id="@+id/addStudentBtn"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#2C0367"
                android:gravity="center"
                android:text="Add Student"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>